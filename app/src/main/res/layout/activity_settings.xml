<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.suneetsri.speedcheck.Settings">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SETTINGS"
        android:textSize="30sp"
        android:gravity="center"
        android:fontFamily="monospace"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOTFICATION"
            android:textSize="22sp"
            android:layout_margin="5dp"
            android:gravity="center"/>
        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/settingsToggleButton"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SPEED LIMIT"
            android:textSize="22sp"
            android:layout_margin="10sp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/settingsSpeedLimit"
            android:text="DEFAULT"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp">
        <EditText
            android:layout_width="match_parent"
            android:gravity="center"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:text="NUMBER 1"
            android:id="@+id/settingNumber1"/>
        <EditText
            android:layout_width="match_parent"
            android:gravity="center"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:text="NUMBER 2"
            android:id="@+id/settingNumber2"/>
        <EditText
            android:layout_width="match_parent"
            android:gravity="center"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:text="NUMBER 3"
            android:id="@+id/settingNumber3"/>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:id="@+id/settingsSaveButton"
        android:text="SAVE CHANGES"
        android:textColor="#000"
        android:background="@color/colorAccent"
        android:theme="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_height="wrap_content" />
</LinearLayout>
